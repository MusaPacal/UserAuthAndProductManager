@model Demo_Product.Models.UserLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>OOP Core Login</title>
    <link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş Paneli</h3></div>
                                <div class="card-body">
                                    <form method="post">
                                        
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" type="text" asp-for="Usename"/>
                                            <label for="inputEmail">Kullanıcı Adı</label>
                                            <span asp-validation-for="Usename" class="text-danger"></span>

                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" type="password" asp-for="Password"/>
                                            <label for="inputPassword">Şifreniz</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                            
                                        </div>
                                        <div class="form-check mb-3">

                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value=""/>
                                            <label class="form-check-label" for="inputRememberPassword">Beni Hatırla</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="#">Şifreni Hatırlamıyor musun?</a>
                                            
                                            <button class="btn btn-primary" >Giriş Yap</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/Register/Index">Bir Hesaba Sahip Değil misiniz? Hesap Oluştur!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Asp.Net Core 8.0 OOP Projesi Tüm Hakları Saklıdır @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Gizlilik Sözleşmesi</a>
                            &middot;
                            <a href="#">Kurallar &amp; Şartlar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/startbootstrap-sb-admin-gh-pages/js/scripts.js"></script>
</body>
</html>
