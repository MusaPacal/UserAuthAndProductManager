@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Müşteri Ekle</h1>


<form method="post">
    @Html.Label("Müşteri Adı Soyadı")
    @Html.TextBoxFor(x=>x.CustomerName,new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.CustomerName,"",new {@class="text-danger"})
    <br />
    @Html.Label("Müşteri Şehri")
    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CustomerCity)
    <br />
    @Html.Label("Meslekler:")
    @Html.DropDownListFor(x=>x.JobID,(List<SelectListItem>)ViewBag.v ,"Meslek Seçiniz...",new {@class="form-control"}) 
    <br />
    <button class="btn btn-primary">Ekle</button>
</form>
